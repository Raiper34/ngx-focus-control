{
  "name": "ngx-focus-control-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:lib": "ng build ngx-focus-control --configuration production && copy-files-from-to",
    "test": "ng test",
    "test:lib": "ng test ngx-focus-control --code-coverage",
    "test:lib:coveralls": "npm run test:lib && cat ./coverage/ngx-focus-control/lcov.info | coveralls",
    "test:lib:dev": "ng test ngx-focus-control --watch=true --browsers=Chrome",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "lint:lib": "ng lint ngx-focus-control",
    "lint:lib:fix": "ng lint ngx-focus-control --fix",
    "e2e": "ng e2e",
    "changelog": "auto-changelog",
    "deploy": "npm run build && netlify deploy --dir=dist/ngx-focus-control-app --configuration production",
    "publish": "npm run build:lib && cd dist/ngx-focus-control && npm publish"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.16",
    "@angular/common": "~12.2.16",
    "@angular/compiler": "~12.2.16",
    "@angular/core": "~12.2.16",
    "@angular/forms": "~12.2.16",
    "@angular/platform-browser": "~12.2.16",
    "@angular/platform-browser-dynamic": "~12.2.16",
    "@angular/router": "~12.2.16",
    "bulma": "^0.9.3",
    "ngx-highlightjs": "^4.1.4",
    "npm-ls-scripts": "^0.1.2",
    "rxjs": "~6.5.4",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.18",
    "@angular/cli": "~12.2.18",
    "@angular/compiler-cli": "~12.2.16",
    "@angular/language-service": "~12.2.16",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.20.37",
    "@types/puppeteer": "^5.4.4",
    "auto-changelog": "^2.4.0",
    "codelyzer": "^6.0.0",
    "copy-files-from-to": "^3.2.2",
    "coveralls": "^3.1.1",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "netlify-cli": "^10.5.0",
    "ng-packagr": "^12.2.7",
    "protractor": "~7.0.0",
    "puppeteer": "^10.4.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.3.5"
  },
  "copyFiles": [
    {
      "from": "README.md",
      "to": "dist/ngx-focus-control/README.md"
    },
    {
      "from": "CHANGELOG.md",
      "to": "dist/ngx-focus-control/CHANGELOG.md"
    },
    {
      "from": "logo.svg",
      "to": "dist/ngx-focus-control/logo.svg"
    }
  ],
  "auto-changelog": {
    "ignoreCommitPattern": "(test\\()|(release\\()|(chore\\()",
    "startingVersion": "3.0.1",
    "commitLimit": 30,
    "hideCredit": true
  }
}
